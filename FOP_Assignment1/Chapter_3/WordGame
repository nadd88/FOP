#include <iostream>
#include <string>

using namespace std;

int main(){
    string name, city, college, proffesion, animal, petName;
    int age;

    cout << "Enter your name: ";
    cin >> name;
    cout << "Enter your city: ";
    cin >> city;
    cout << "Enter your college: ";
    cin >> college;
    cout << "Enter your proffesion: ";
    cin >> proffesion;
    cout << "Enter an animal type: ";
    cin >> animal;
    cout << "Enter your pet name: ";
    cin >> petName;
    cout << "Enter your age: ";
    cin >> age;

    cout <<"There once was a person named " << name <<  " lived in " << city << ". At the age of "<< age << " ,"<< name << " went to college at "<< college << ". "<< name <<  " graduated and went to work as a "<< proffesion << ". Then, "<< "adopted a(n) " << animal << " named " << petName << ". They both lived happily ever after!" ;

}